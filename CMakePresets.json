{
    "version": 7,
    "configurePresets": [
        {
            "name": "vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "VCPKG_MANIFEST_MODE": "ON",
                "VCPKG_VERBOSE": "ON",
                "CMAKE_VERBOSE_MAKEFILE": "ON"
            },
            "toolchainFile": "${env:VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "trace": {"mode": "expand","format": "human"}
        }
    ]
}