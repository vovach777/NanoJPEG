{
  "version": 7,
  "configurePresets": [
    {
      "name": "mingw-static",
      "inherits": "vcpkg",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET" : "x64-mingw-static",
        "VCPKG_HOST_TRIPLET" : "x64-mingw-static",
        "CMAKE_CXX_COMPILER": "g++.exe",
        "CMAKE_C_COMPILER": "gcc.exe",
        "VCPKG_CRT_LINKAGE" : "static",
        "CMAKE_SYSTEM_NAME" :  "MinGW"

      }
    },
    {
      "name": "clang-cl-static",
      "inherits": "vcpkg",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET" : "x64-clang-cl-static",
        "VCPKG_CMAKE_CROSSCOMPILING"  :"OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}